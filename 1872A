#include <bits/stdc++.h>
using namespace std;
using ll = long long;

ll gcd(ll a, ll b){if(b == 0) return a; return gcd(b, a % b);}
ll lcm(ll a, ll b){return a / gcd(a, b) * b;}
bool isPrime(ll n){if(n == 1) return 0; for(int i = 2; i <= round(sqrt(n)); i++) if(n % i == 0) return 0; return 1;}

int main(){
	ios_base::sync_with_stdio(0);
    cin.tie(0); cout.tie(0);
    
	int t; cin >> t;
	while(t--){
		int a, b, c;
		cin >> a >> b >> c;
		int count = 0;
		float diff = abs(a - b);
		while(diff){
			if(diff / 2 >= c){
				diff -= 2 * c;
				count += 1;
			}
			else{
				diff = 0;
				count += 1;
			}
		}
		cout << count << endl;
	}
	
	return 0;
}
